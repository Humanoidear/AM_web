---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ContactComponent from "../../components/Contact.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${t("header.contact")} | ${t("site.title")}`} description={t("site.description")} />
  </head>
  <body>
    <Header />
    <main class="w-screen h-screen flex flex-col items-center jusitfy-center">
      <iframe
        src="/html/frame_follow.html"
        class="top-0 left-0 w-full h-full z-0 transition-all absolute"
        transition:name="bg-iframe"></iframe>
        <div class="mt-10"></div>
        <ContactComponent />
        <Footer />
    </main>
  </body>
</html>
